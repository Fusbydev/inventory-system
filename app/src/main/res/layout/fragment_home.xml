<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#DAD3D3"
    tools:context=".homeFragment">

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="100dp"
        android:layout_marginTop="190dp"
        android:fontFamily="@font/roboto_bold"
        android:text="INSIGHTS"
        android:textSize="38dp"
        android:textStyle="bold" />

    <LinearLayout
        android:layout_width="340dp"
        android:layout_height="50dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="76dp"
        android:background="#DAD3D3"
        android:orientation="horizontal">

        <Button
            android:id="@+id/inventoryButton"
            android:layout_width="wrap_content"
            android:layout_height="32dp"
            android:layout_gravity="start|top"
            android:layout_marginStart="13dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="5dp"
            android:background="@drawable/button_background"
            android:fontFamily="@font/roboto_bold"
            android:text="Inventory"
            android:textSize="10dp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/TransactionButton"
            android:layout_width="wrap_content"
            android:layout_height="32dp"
            android:layout_gravity="start|top"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="5dp"
            android:background="@drawable/button_background"
            android:fontFamily="@font/roboto_bold"
            android:text="Credit/Load"
            android:textSize="8dp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/incometracker"
            android:layout_width="wrap_content"
            android:layout_height="32dp"
            android:layout_gravity="start|top"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="5dp"
            android:background="@drawable/button_background"
            android:fontFamily="@font/roboto_bold"
            android:text="Income Tracker"
            android:textSize="10dp"
            android:textStyle="bold" />


    </LinearLayout>


    <FrameLayout
        android:layout_width="340dp"
        android:layout_height="500dp"
        android:layout_gravity="start|top"
        android:layout_marginTop="250dp"
        android:layout_marginEnd="10dp"
        android:layout_marginStart="10dp"
        android:background="@drawable/rounded_corners"
        android:outlineSpotShadowColor="#FFFFFF">

        <!-- Other child views can be added here -->

    </FrameLayout>


    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="65dp"
        android:background="@drawable/rounded_corners_bottom">

        <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:fontFamily="@font/roboto_bold"
            android:gravity="center"
            android:layout_marginStart="30dp"
            android:text="INVENTRACK"
            android:textSize="34sp"
            android:textStyle="bold" />
    </FrameLayout>


</FrameLayout>

<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F9F5EB"
    tools:context=".homeFragment">

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="100dp"
        android:layout_marginTop="190dp"
        android:fontFamily="@font/sen_extrabold"
        android:text="INSIGHTS"
        android:textColor="#353535"
        android:textSize="38dp"
        android:textStyle="bold" />

    <LinearLayout
        android:layout_width="340dp"
        android:layout_height="50dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="76dp"
        android:orientation="horizontal">

        <Button
            android:id="@+id/inventoryButton"
            android:layout_width="wrap_content"
            android:layout_height="32dp"
            android:layout_gravity="start|top"
            android:layout_marginStart="13dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="5dp"
            android:background="@drawable/button_background"
            android:fontFamily="@font/sen_bold"
            android:text="Inventory"
            android:textColor="#FFFFFF"
            android:textSize="10dp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/TransactionButton"
            android:layout_width="wrap_content"
            android:layout_height="32dp"
            android:layout_gravity="start|top"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="5dp"
            android:background="@drawable/button_background"
            android:fontFamily="@font/sen_bold"
            android:text="Credit/Load"
            android:textColor="#FFFFFF"
            android:textSize="8dp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/incometracker"
            android:layout_width="wrap_content"
            android:layout_height="32dp"
            android:layout_gravity="start|top"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="5dp"
            android:background="@drawable/button_background"
            android:fontFamily="@font/sen_bold"
            android:text="Income Tracker"
            android:textColor="#FFFFFF"
            android:textSize="10dp"
            android:textStyle="bold" />


    </LinearLayout>


    <FrameLayout
        android:layout_width="340dp"
        android:layout_height="500dp"
        android:layout_gravity="start|top"
        android:layout_marginTop="250dp"
        android:layout_marginEnd="10dp"
        android:layout_marginStart="10dp"
        android:background="@drawable/rounded_corners"
        android:outlineSpotShadowColor="#FFFFFF">

        <TableLayout
            android:id="@+id/transactionTableLayout"
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:layout_marginTop="50dp"
            android:padding="16dp">
            <!-- Table rows will be dynamically added here -->
        </TableLayout>

        <TextView
            android:id="@+id/textView2"
            android:layout_width="123dp"
            android:layout_height="31dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="10dp"
            android:fontFamily="@font/sen_extrabold"
            android:text="TOP 3 PRODUCTS"
            android:textColor="#F4F4F4" />

    </FrameLayout>


    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="65dp"
        android:background="@drawable/rounded_corners_bottom">

        <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginStart="25dp"
            android:fontFamily="@font/sen_extrabold"
            android:gravity="center"
            android:text="INVENTRACK"
            android:textColor="#FFFFFF"
            android:textSize="34sp"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="76dp"
            android:layout_height="match_parent"
            android:layout_marginStart="35dp"

            android:src="@drawable/logo" />
    </FrameLayout>


</FrameLayout>
